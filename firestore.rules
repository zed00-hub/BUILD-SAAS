rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if user is admin based on their user document
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Check if user is accessing their own data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- NEW: Pricing Configuration ---
    match /settings/pricingConfig {
      allow read: if true; // Everyone can see prices
      allow write: if isAdmin(); // Only Admin can edit
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null; 
      // Allow user to update their own data (balance, usage stats), EXCEPT elevating privileges
      allow update: if isAdmin() || (isOwner(userId) && 
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isDisabled']))
      );
    }

    // Transactions Collection
    match /transactions/{transactionId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      // Allow creation if the transaction belongs to the authenticated user OR if done by an admin
      allow create: if (request.auth != null && request.resource.data.userId == request.auth.uid) || isAdmin();
    }
    
    // Orders Collection
    match /orders/{orderId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow users to update their own orders (e.g. marking as completed)
      allow update: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
    }

    // Saved Designs Collection (Cloud Storage metadata)
    match /saved_designs/{designId} {
      // Users can read their own designs, admins can read all
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      // Users can create designs only for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can delete their own designs
      allow delete: if resource.data.userId == request.auth.uid || isAdmin();
      // No updates allowed (designs are immutable)
      allow update: if false;
    }

    // Tool Locks Collection (Global App Config)
    match /tool_locks/{toolId} {
      allow read: if true; // Frontend needs to know if tool is locked
      allow write: if isAdmin(); // Only admins can manage locks
    }
  }
}
